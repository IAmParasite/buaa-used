/* assets/wxss/badge.wxss */
.doc-bdg{
  display: inline-block;
  width:100rpx;
  height:100rpx;
  margin:0rpx 30rpx;
  background: #ddd;
  border-radius: 10rpx;
}
.doc-bdg .doc-seals{
  position: relative;
}
.doc-seal{
  position: absolute;
  top: -0.8em;
  right: 0px;
  padding:0px 10rpx;
  background:red;
  color:#fff;
  height:1.6em;
  min-width: 1.6em;
  line-height: 1.6;
  font-size: 10px;
  border-radius: 0.8em;
  text-align: center;
  white-space: nowrap;
  transform: translateX(50%);
  z-index: 10;
  transform-origin: -10% center;
  box-sizing: border-box;
}

/*icon印章*/
