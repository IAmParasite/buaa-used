/* pages/me/me.wxss */
.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 100%;  
  color: violet;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 230rpx;  
  height: 230rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  margin-bottom: 50rpx;
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
  

.avatar {
  display: flex;
  justify-content:center;
  margin-top: 60rpx;
  border-radius: 100%;
}

.avatar image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}

.name {
  text-align: center;
  color: #9B9B9B;
  font-size: 40rpx;
  margin: 10rpx 0 60rpx;
}

.item {
  display: flex;
  color: #9B9B9B;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #DDD;
  font-size: 36rpx;
}

.item text:first-child {
  flex: 1;
}

.item text:last-child {
  width: 50rpx;
}